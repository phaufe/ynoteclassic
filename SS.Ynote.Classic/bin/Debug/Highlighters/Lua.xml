<doc>
<!--Brackets-->
    <brackets left="(" right=")" />
	<brackets left="{" right="}" />
	<!--Style Definition -->
	<style name="KeywordStyle" color="Blue"/>
	<style name="String" color="Brown"/>
	<style name="Comment" color="Green"/>
	
<!--Syntax Highlighting Rules-->
	
	<rule style="KeywordStyle">and|end|in|repeat|break|false|local|return|do|for|nil|then|else|function|not|true|elseif|if|or|until|while|string</rule>
	<rule style="String" options="Multiline">".*?[^\\]"|""</rule>
	<rule style="Comment" options="Multiline">--.*$</rule>
	<rule style="Comment" options="Singleline">&lt;(/\*.*?\*/)&gt;|&lt;(/\*.*)&gt;</rule>
	<rule style="Comment" options="Singleline">&lt;(/\*.*?\*/)&gt;|&lt;(.*\*/)&gt;</rule>
	
<!--Code Folding -->

    <folding start="{" finish="}" options="IgnoreCase"/>
	
</doc>