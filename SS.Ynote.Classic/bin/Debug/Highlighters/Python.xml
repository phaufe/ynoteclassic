
<!-- If you would like to modify it, you are free to do it. Please send a copy of the Highlighter to samarjeetsingh27@gmail.com -->
        
<doc>
    <style name="Blue" color="Blue"/>
    <style name="Green" color="Green"/>
    <style name="String" color="Brown"/>
    <style name="Orange" color="Orange"/>
    <style name="Class" color="SteelBlue"/>
    
    <rule style="Blue" options="IgnoreCase">and|del|from|not|while|as|elif|global|or|with|assert|else|if|pass|yield|break|except|import|print|class|exec|in|raise|continue|finally|is|return|def|for|lambda|try</rule>
        
    <rule style="String" options="Multiline">".*?[^\\]"|""</rule>    
    <rule style="Class" options="Multiline">def.*$</rule>
    <rule style="Green">#.*$</rule>
</doc>
